logFile $ORIGIN/synchronization-renode.log True

using sysbus
$name?="nrf52840dk_nrf52840"
mach create $name

machine LoadPlatformDescription $ORIGIN/synchronization.repl

showAnalyzer uart0

uart0 RecordToAsciinema $ORIGIN/synchronization-asciinema

macro reset
"""
    sysbus LoadELF @https://zephyr-dashboard.renode.io/zephyr/cce7e9a706ca848f73e4ef2c435668e358b73305/nrf52840dk_nrf52840/synchronization/synchronization.elf
    cpu0 VectorTableOffset `sysbus GetSymbolAddress "_vector_table"`
"""

runMacro $reset